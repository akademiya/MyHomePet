<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Toolbar-->
    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:gravity">center_vertical</item>
    </style>
    <!--End Toolbar-->

    <!--Text-->
    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>

    <style name="TextStyle_Caption_Dark" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextStyle_Body2_Primary_Dark" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="android:textColor">@color/foreground_text_color_dark</item>
    </style>

    <style name="TextStyle_SubHeader_Primary_Dark" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:textSize">@dimen/subheader_text_size</item>
        <item name="android:textColor">@color/foreground_text_color_dark</item>
    </style>

    <style name="TextStyle_SubHeader_Accent" parent="TextStyle_SubHeader_Primary_Dark">
        <item name="android:textColor">@color/accent_darker</item>
    </style>

    <style name="TextStyle_Body2_Link_Color" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="android:textColor">@color/link_color</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextStyle_Caption_Accent" parent="TextStyle_Caption_Dark">
        <item name="android:textColor">@color/accent_darker</item>
    </style>
    <!--End Text-->

    <!-- ERROR STYLES-->
    <style name="TextAppearance.AppCompat.Small.ErrorStyle">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <!--Buttons-->
    <style name="ButtonWithIcon" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:padding">@dimen/icon_button_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ButtonBack_White" parent="ButtonWithIcon">
        <item name="android:src">@drawable/ic_arrow_back_white</item>
        <item name="android:background">@drawable/button_ripple_circle_green</item>
    </style>

    <style name="ButtonToolbarWithStartEndPadding" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_background_toolbar</item>
        <item name="android:textColor">@color/foreground_text_color_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:paddingStart">@dimen/margin_16_24</item>
        <item name="android:paddingEnd">@dimen/margin_16_24</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="ButtonFillGreen" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:minWidth">@dimen/button88_width</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/padding_button_not_toolbar_8dp</item>
        <item name="android:paddingEnd">@dimen/padding_button_not_toolbar_8dp</item>
        <item name="android:textColor">@color/foreground_text_color_light</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="ButtonFillWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/foreground_text_color_dark</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="ButtonTransparent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/foreground_text_color_dark</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:drawableTint">@color/ic_normal_dark</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
    </style>

    <style name="ButtonCircleWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_circle_background_white</item>
        <item name="android:elevation">2dp</item>
    </style>
    <!--End Buttons-->

    <!--Divider-->
    <style name="AppTheme.HorizontalViewDivider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="AppTheme.HorizontalSpinnerDivider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_spinner_color</item>
    </style>
    <!--End Divider-->

    <!--CheckBox-->
    <style name="CheckBox" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorSecondary">@color/ic_normal_dark</item>
    </style>

</resources>