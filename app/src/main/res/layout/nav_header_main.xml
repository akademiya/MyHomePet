<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_36"
        android:layout_marginStart="@dimen/parent_margin_edge"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/drawer_logo"
            android:layout_height="@dimen/drawer_logo"
            android:layout_marginEnd="@dimen/space_16"
            android:background="@drawable/circle_decorator"
            android:backgroundTint="@color/white"
            android:src="@drawable/dog" />

        <TextView
            style="@style/TextStyle_Drawer_Header"
            android:text="@string/login_slang_drawer"
            android:textAllCaps="true"
            android:textSize="@dimen/drawer_app_name_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/owner_name"
        style="@style/TextStyle_Drawer_Header"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_4"
        tools:text="Owner"
        android:textSize="@dimen/body2_text_size" />

    <TextView
        android:id="@+id/owner_country"
        style="@style/TextStyle_Drawer_Header"
        android:layout_marginBottom="@dimen/space_16"
        tools:text="Kiev" />

    <View style="@style/AppTheme.HorizontalViewDivider" />

</LinearLayout>