<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:padding="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/Toolbar.TitleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_20"
            android:layout_toEndOf="@+id/button_back"
            android:gravity="center_vertical"
            android:text="@string/settings"
            android:textColor="@color/white" />

    </android.support.v7.widget.Toolbar>

    <!--OWNER-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/parent_margin_edge"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/parent_margin_edge"
            android:layout_marginEnd="@dimen/parent_margin_edge"
            android:layout_marginStart="@dimen/parent_margin_edge"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_SubHeader_Accent"
                android:layout_marginBottom="@dimen/space_4"
                android:layout_marginTop="@dimen/space_8"
                android:text="@string/owner" />

            <LinearLayout
                android:id="@+id/represent_as_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/parent_margin_edge"
                android:layout_marginTop="@dimen/parent_margin_edge"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_pet_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="@dimen/space_16"
                        android:background="@drawable/circle_decorator"
                        android:src="@drawable/ic_person" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_16"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_choose_photo"
                        style="@style/ButtonTransparent"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/space_8"
                        android:background="@drawable/button_background_white"
                        android:drawableStart="@drawable/ic_choose_photo"
                        android:text="@string/choose_photo" />

                    <Button
                        android:id="@+id/btn_take_photo"
                        style="@style/ButtonTransparent"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_background_white"
                        android:drawableStart="@drawable/ic_take_photo"
                        android:text="@string/take_photo" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/owner_name" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/settings_owner_name"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vadym" />

                <Button
                    android:id="@+id/edit_owner_name"
                    style="@style/ButtonFillGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:text="edit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="48dp">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/mobile" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/settings_owner_phone"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="+38099632145" />

                <Button
                    android:id="@+id/edit_owner_phone"
                    style="@style/ButtonFillGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:text="edit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="48dp">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/country" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/settings_owner_city"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kiev" />

                <Button
                    android:id="@+id/edit_owner_city"
                    style="@style/ButtonFillGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:text="edit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="48dp">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/password" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/settings_owner_password"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="******" />

                <Button
                    android:id="@+id/edit_owner_password"
                    style="@style/ButtonFillGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:text="edit" />
            </LinearLayout>

