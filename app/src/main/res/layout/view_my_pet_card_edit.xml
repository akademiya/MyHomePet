<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:padding="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_back"
                style="@style/ButtonBack_White"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:background="@drawable/button_ripple_circle_green" />

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/Toolbar.TitleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="56dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                tools:text="Create/Edit my pet" />

            <Button
                android:id="@+id/button_save"
                style="@style/ButtonToolbarWithStartEndPadding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Save" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/container_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--PET-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/photo_pet"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kisa2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/empty_photo_pet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />



                    </RelativeLayout>

                    <!--Категория-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:paddingEnd="16dp">

                        <TextView
                            style="@style/TextStyle_SubHeader_Accent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="8dp"
                            android:text="Category" />

                        <Spinner
                            android:id="@+id/spinner_categories"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:dropDownWidth="match_parent" />

                        <View
                            style="@style/AppTheme.HorizontalSpinnerDivider"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!--Действие с питомцом-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:paddingEnd="16dp">

                        <TextView
                            style="@style/TextStyle_SubHeader_Accent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="8dp"
                            android:text="Action" />

                        <Spinner
                            android:id="@+id/main_action"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            tools:text="Action" />

                        <View
                            style="@style/AppTheme.HorizontalSpinnerDivider"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!--Период-->
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/action_period"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Period" />
                    </android.support.design.widget.TextInputLayout>

                    <!--Порода питомца-->
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/pet_breed"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Breed" />
                    </android.support.design.widget.TextInputLayout>

                    <!--Кличка питомца-->
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/pet_name"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Pet name" />
                    </android.support.design.widget.TextInputLayout>

                    <!--Возраст питомца-->
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/pet_age"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Pet age" />
                    </android.support.design.widget.TextInputLayout>

                    <!--Наличие прививок-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:paddingEnd="16dp">

                        <TextView
                            style="@style/TextStyle_SubHeader_Accent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="8dp"
                            android:text="Наличие прививок" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="40dp"
                                android:text="Yes" />

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No" />
                        </LinearLayout>

                        <View
                            style="@style/AppTheme.HorizontalSpinnerDivider"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!--Описание-->
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/description"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Description" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--OWNER-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/owner_name"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Nik Name" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/owner_telephone"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Telephone" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/owner_country"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Country" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Write message" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--FURNITURE-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/furniture"
                            style="@style/TextStyle_Body2_Primary_Dark"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_vertical"
                            android:hint="Furniture" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>